{
  "name": "reckon-js",
  "version": "0.1.6",
  "description": "Event-based, immutable state container for javascript apps with cursors and views",
  "main": "./dist/index.js",
  "dependencies": {
    "immutable": "^3.8.1",
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "add-banner": "^0.1.0",
    "eslint-loader": "^1.5.0",
    "async": "^1.2.1",
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "benchmark": "^1.0.0",
    "browserify": "^12.0.1",
    "eslint": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.0.1",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "build": "mkdirp build && browserify ./src/index.js -t [babelify --loose all] -s Reckon -o ./build/reckon.js && uglifyjs ./build/reckon.js -c -m -o ./build/reckon.min.js && node ./scripts/banner.js",
    "dist": "babel ./src --out-dir dist",
    "clean": "rm -f build/*.js dist/*.js",
    "lint": "eslint ./src ./test",
    "check": "npm test && npm run lint && npm run build",
    "prepublish": "npm run dist",
    "test": "mocha -R spec --recursive --compilers js:babel/register",
    "benchmark": "babel-node benchmark.js"
  },
  "author": {
    "name": "Matt James",
    "url": "http://github.com/mj1618"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mj1618/reckon-js.git"
  },
  "keywords": [
    "immutable",
    "state",
    "events",
    "cursors"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mj1618/reckon-js/issues"
  },
  "homepage": "https://github.com/mj1618/reckon-js"
}
