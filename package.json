{
  "name": "fabric",
  "version": "0.0.1",
  "description": "Event-based, immutable state container for javascript apps with cursors and views",
  "main": "./dist/fabric.min.js",
  "dependencies": {
    "eslint-loader": "^1.5.0",
    "immutable": "^3.8.1",
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "async": "^1.2.1",
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "benchmark": "^1.0.0",
    "browserify": "^12.0.1",
    "eslint": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.0.1",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
